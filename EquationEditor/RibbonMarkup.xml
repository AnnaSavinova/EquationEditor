      </Command.LargeImages>
    </Command>

    <Command Name="cmdTabMain"
             Symbol="ID_CMD_TAB_MAIN"
             LabelTitle="Главная">
    </Command>

    <Command Name="cmdTabMore"
             Symbol="ID_CMD_TAB_MORE"
             LabelTitle="Больше">
    </Command>

    <Command Name="cmdGroupActions"
             Symbol="ID_CMD_GROUP_FILE"
             LabelTitle="Действия">
    </Command>

    <Command Name="cmdGroupBracket"
         Symbol="ID_CMD_GROUP_BRACKET"
         LabelTitle="Скобки">
    </Command>
    
     <Command Name="cmdGroupSumProduct"
         Symbol="ID_CMD_GROUP_SUM_PRODUCT"
         LabelTitle="Сумма и произведение">
    </Command>

    <Command Name="cmdGroupExit"
             Symbol="ID_CMD_GROUP_EXIT"
             LabelTitle="Выход">
    </Command>

    <Command Name="cmdGroupMore"
             Symbol="ID_CMD_MORE"
             LabelTitle="Выход">
    </Command>
  </Application.Commands>

	<Application.Views>
		<Ribbon>
      <Ribbon.Tabs>
        
        <Tab CommandName="cmdTabMain">
          
          <Group CommandName="cmdGroupActions" SizeDefinition="FourButtons">
            <Button CommandName="cmdButtonFrac" />
            <Button CommandName="cmdButtonDegr" />
            <Button CommandName="cmdButtonSubscript" />
            <Button CommandName="cmdButtonRadical" />
          </Group>

          <Group CommandName="cmdGroupBracket" SizeDefinition="OneButton">
            <Button CommandName="cmdButtonBracket" />
          </Group>

          <Group CommandName="cmdGroupSumProduct" SizeDefinition="TwoButtons">
            <Button CommandName="cmdButtonSum" />
            <Button CommandName="cmdButtonProduct" />
          </Group>
            
          <Group CommandName="cmdGroupExit" SizeDefinition="OneButton">
            <Button CommandName="cmdButtonExit" />
          </Group>
        </Tab>       
      </Ribbon.Tabs>
		</Ribbon>
	</Application.Views>
</Application>

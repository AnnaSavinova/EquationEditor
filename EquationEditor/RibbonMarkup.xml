             Symbol="ID_CMD_Bracket"
             LabelTitle="Скобки"
             LabelDescription="Скобки"
             TooltipDescription="Скобки">
      <Command.LargeImages>
        <Image>Res\bracket.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonSum"
             Symbol="ID_CMD_Sum"
             LabelTitle="Сумма"
             LabelDescription="Сумма"
             TooltipDescription="Сумма">
      <Command.LargeImages>
        <Image>Res\sum.bmp</Image>
      </Command.LargeImages>
    </Command>        

    <Command Name="cmdButtonProduct"
             Symbol="ID_CMD_Product"
             LabelTitle="Произведение"
             LabelDescription="Произведение"
             TooltipDescription="Произведение">
      <Command.LargeImages>
        <Image>Res\product.bmp</Image>
      </Command.LargeImages>
    </Command>    

    <Command Name="cmdButtonExit"
             Symbol="ID_CMD_EXIT"
             LabelTitle="Выход"

             Symbol="ID_CMD_DEGR"
             LabelTitle="Степень"
             LabelDescription="Степень"
             TooltipDescription="Создание новой степени">
      <Command.LargeImages>
        <Image>Res\degr.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonSubscript"
             Symbol="ID_CMD_SUBSCRIPT"
             LabelTitle="Нижний индекс"
             LabelDescription="Нижний индекс"
             TooltipDescription="Создание нижнего индекса">
      <Command.LargeImages>
        <Image>Res\subscript.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonRadical"
             Symbol="ID_CMD_RADICAL"
             LabelTitle="Корень"
